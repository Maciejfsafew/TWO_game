<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="http://cdn.jsdelivr.net/jquery.cookie/1.3.1/jquery.cookie.js"></script>
    <script type="text/javascript">
        $(function () {
            if ($.cookie("name") != null) {
                window.open('/game', "_self")
            }
            else {
                $("#body_elements").attr('style', 'display: block');
            }
        });
    </script>
</head>
<body id="body_elements" style="display: none;">
<h1 style=";text-align:center;font-size:20pt;">
    Simple Login Page
</h1>

<div style="width: 100%;text-align: center">
    Username &nbsp&nbsp&nbsp<input type="text" id="txtName"/>
    <br>
    <br>
    <input type="submit" onclick="check(this.form)" value="Login" id="button"/>
    <input type="reset" value="Reset"/>
</div>

<script>
    document.getElementById('txtName').addEventListener('keypress', function(event) {
        if (event.keyCode == 13 || event.keyCode == 10) {
            $("#button").click();
        }
    });
</script>

<script language="javascript">
    function check(form)/*TODO function to check if user is logged currently*/ {
        var val = $("#txtName").val();
        if (val != null && val != '') {
            $.cookie("name", val);
            window.open('game', "_self")
        }
        else {
            window.alert("Please, fill in name field");
        }
    }
</script>
</body>
</html>

